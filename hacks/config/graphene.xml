<?xml version="1.0" encoding="ISO-8859-1"?>

<screensaver name="graphene" _label="Graphene" gl="yes">

  <command arg="-root"/>

  <boolean id="showfps" _label="Show frame rate" arg-set="-fps"/>

  <select id="scene">
    <option id="random" _label="Random" arg-st='-scene random'/>
    <option id="demo" _label="Demo" arg-set='-scene demo'/>
    <option id="curves" _label="Curves" arg-set='-scene curves'/>
  </select>

  <_description>
Interfering coloured waves on hexagonal grid

Written by Sergey Pushkin; 2006-2016.
  </_description>
</screensaver>
